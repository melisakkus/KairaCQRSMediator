@model List<GetSubscribeQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}

<br />
<h1 class="text-center">Abonelikler</h1>

@{
    int count = 0;
}
<br />
<table class="table table-hover table-bordered text-center">
    <tr>
        <th>#</th>
        <th>Email</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Email</td>
            <td>
                <a href="/Admin/Subscribe/Remove/@item.SubscribeId" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/Subscribe/Update/@item.SubscribeId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<div class="text-center">
    <a href="/Admin/Subscribe/Create" class="btn btn-outline-success">Yeni Abonelik Ekle</a>
</div>
