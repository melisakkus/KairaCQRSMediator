@model GetTestimonialByIdQueryResult
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}

<br />
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-8">

        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center mb-4">Değerlendirme Güncelle</h4>

                <form method="post">
                    <input type="hidden" asp-for="TestimonialId" />

                    <div class="form-group">
                        <label asp-for="ByName">Ad Soyad</label>
                        <input type="text" asp-for="ByName" class="form-control" />
                        <span class="text-danger" asp-validation-for="ByName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="3" ></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>

                    <div class="text-center mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
                        <a href="/Admin/Testimonial/Index" class="btn btn-light btn-lg ml-2">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
