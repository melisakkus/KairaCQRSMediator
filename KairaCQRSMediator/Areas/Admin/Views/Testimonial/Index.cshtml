@model List<GetTestimonialQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}


<br />
<h1 class="text-center">Değerlendirmeler</h1>

@{
    int count = 0;
}
<br />
<table class="table table-hover table-bordered text-center">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Yorum</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.ByName</td>
            <td>
                @(item.Description.Length < 75 ? @item.Description : @item.Description.Substring(0,75) + "...")
            </td>
            <td>
                <a href="/Admin/Testimonial/Remove/@item.TestimonialId" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/Testimonial/Update/@item.TestimonialId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<div class="text-center">
    <a href="/Admin/Testimonial/Create" class="btn btn-outline-success">Yeni Değerlendirme Ekle</a>
</div>
