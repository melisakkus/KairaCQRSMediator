@model List<GetContactInfosQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}
<br />
<h1 class="text-center">İletişim Bilgileri</h1>

<br />
<table class="table table-hover table-bordered text-center">
    <tr>
        <th>Tel No</th>
        <th>Email</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td>
                <a href="/Admin/ContactInfo/Remove/@item.ContactInfoId" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/ContactInfo/Update/@item.ContactInfoId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<div class="text-center">
    <a href="/Admin/ContactInfo/Create" class="btn btn-outline-success">Yeni İletişim Bilgisi Ekle</a>
</div>

