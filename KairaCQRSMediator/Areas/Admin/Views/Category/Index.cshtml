@model List<GetCategoryQueryResult>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Layouts/Views/AdminLayout/Layout.cshtml";
}
@{
    int count = 0;
}
<br />
<h1 class="text-center">Kategoriler</h1>
<br />
<table class="table table-hover table-bordered text-center">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Admin/Category/RemoveCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<div class="text-center">
    <a href="/Admin/Category/CreateCategory" class="btn btn-outline-success">Yeni Kategori</a>
</div>

