@model List<GetCategoryQueryResult>
@{
    ViewData["Title"] = "Index";
}
@{
    int count = 0;
}

<table class="table table-hover table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Admin/Category/RemoveCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <a href="/Admin/Category/CreateCategory" class="btn btn-outline-success">Yeni Kategori</a>
</div>