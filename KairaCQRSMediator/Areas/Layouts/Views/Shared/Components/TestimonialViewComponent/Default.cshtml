@using KairaCQRSMediator.Features.CQRS.Results.TestimonialResults
@model List<GetTestimonialQueryResult>
@*TestimonialViewComponent*@

<section class="testimonials py-5 bg-light">
    <div class="section-header text-center mt-5">
        <h3 class="section-title">Memnuniyetiniz En Büyük İltifatımızdır</h3>
    </div>
    <div class="swiper testimonial-swiper overflow-hidden my-5">
        <div class="swiper-wrapper d-flex">

            @foreach(var item in Model)
            {
                <div class="swiper-slide">
                    <div class="testimonial-item text-center">
                        <blockquote>
                            <p>“@item.Description”</p>
                            <div class="review-title text-uppercase">@item.ByName</div>
                        </blockquote>
                    </div>
                </div>

            }
        </div>
    </div>
    <div class="testimonial-swiper-pagination d-flex justify-content-center mb-5"></div>
</section>
