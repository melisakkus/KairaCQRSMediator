@using KairaCQRSMediator.Features.Mediator.Results.GalleryResults
@model List<GetGalleryQueryResult>
@*GalleryViewComponent*@

<section class="instagram position-relative">
    <div class="d-flex justify-content-center w-100 position-absolute bottom-0 z-1">
        <a href="https://www.instagram.com/templatesjungle/" class="btn btn-dark px-5">Sosyal Medya Hesaplarımızı Takip Edin</a>
    </div>

    <div class="row g-0">
        @foreach (var item in Model)
        {
            <div class="col-6 col-sm-4 col-md-2">

                <div class="insta-item">

                    <a href="https://www.instagram.com/templatesjungle/" target="_blank">
                        <img src="@item.Url" alt="instagram" class="insta-image img-fluid">
                    </a>

                </div>

            </div>
        }

    </div>

</section>
